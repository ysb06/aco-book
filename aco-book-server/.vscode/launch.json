    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/aco-book-server",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "args": [
                "app:app",
                "--reload"
            ],
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}